//NPCs

script NPC_DWARVENMINES_NPC1
{
    lock
    faceplayer
    namebox ("Apprentice")
    msgbox(format("This is the Dwarven Manufacturing and Power Generating Station!\pWhich happens to be the only place in Gielinor that you can find the esteemed Dwarf Multicannon for sale."))
    closemessage
    hidenamebox
	release
	end
}

