script GeneralStore_DWARVENMINES {
    lock
    faceplayer
    namebox("Clerk")
    msgbox(format("Oh, we don't normally get human customers!\pWelcome to the Dwarven Mines General Store.\pHow may I help you?"))
    waitmessage
    call(GeneralStoreShopScript)
    msgbox("Thank you, come again!")
    release
}

