	    msgbox(format("What did I tell you two?\pGo and guard the jail!\lOtherwise you won't be getting any rations tonight."))
        closemessage
        hidenamebox
        return
    }
    if (var(VAR_POKESCAPE_STORYMODE_PROGRESS) == 230) { 
        faceplayer
        namebox ("H.A.M Guard")
	    msgbox(format("I saw the other guard you relieved walk past not too long ago.\lHave you idiots left the jail unguarded?\pWhat if someone tries to sneak in and break the prisoners out!\lGet back to your post before I have to involved Sigmund!"))
        closemessage
        hidenamebox
        return
    }
    else {
        msgbox(format("The guard is too busy to pay attention to you."))
        closemessage
        hidenamebox
        return
    }
    release
    end
}

