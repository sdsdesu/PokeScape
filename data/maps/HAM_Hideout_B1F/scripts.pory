script TRIGGER_HAMHIDEOUT_EVENT_1 {
    lock
    getplayerxy(VAR_TEMP_1, VAR_TEMP_2)     
    if (var(VAR_TEMP_1) == 11){                 
        applymovement(OBJ_EVENT_ID_FOLLOWER, HAM_Hideout_Zanik_1_Right)         //have Zanik move beside player
        waitmovement(0)
        applymovement(33, HAM_Hideout_Intro_1_Left)         //have HAM member move to speak to them
        waitmovement(0)
    } 
    else {
        applymovement(OBJ_EVENT_ID_FOLLOWER, HAM_Hideout_Zanik_1_Left)         //have Zanik move beside player
        waitmovement(0)
        applymovement(33, HAM_Hideout_Intro_1_Right)        //have HAM member move to speak to them
        waitmovement(0)
    }
    applymovement(OBJ_EVENT_ID_PLAYER, Movement_InteractFACEUP)
    applymovement(OBJ_EVENT_ID_FOLLOWER, Movement_InteractFACEUP)
    waitmovement(0)
    namebox("HAM Grunt")
    msgbox(format("You're late!\lYou should have come in to cover the next shift hours ago.\p...{PAUSE 15}\pI don't want to hear any excuses, now go to the jail!\lSomeone needs to keep watch over our guests!\p...{PAUSE 15}\pWhat's with the blank expressions?\lSurely you both know it's in the south-east of the cave by now, right!?"))
    hidenamebox
    closemessage
    getplayerxy(VAR_TEMP_1, VAR_TEMP_2)  
    if (var(VAR_TEMP_1) == 11){                 
        applymovement(33, HAM_Hideout_Intro_2_Left)         //have HAM member move to original position
        waitmovement(0)
        applymovement(OBJ_EVENT_ID_PLAYER, Movement_InteractFACERIGHT)
        applymovement(OBJ_EVENT_ID_FOLLOWER, Movement_InteractFACELEFT)
        waitmovement(0)
    } 
    else {
        applymovement(33, HAM_Hideout_Intro_2_Right)        //have HAM member move to original position
        waitmovement(0)
        applymovement(OBJ_EVENT_ID_PLAYER, Movement_InteractFACELEFT)
        applymovement(OBJ_EVENT_ID_FOLLOWER, Movement_InteractFACERIGHT)
        waitmovement(0)
    }
    namebox("Zanik")
    msgbox(format("Did you hear that {PLAYER}?! This gives us the perfect cover to check whether H.A.M have the Prince in their jail cells.\lLet's go!"))
    closemessage
    hidenamebox
    setvar(VAR_TEMP_0, 2)
    setvar(VAR_POKESCAPE_STORYMODE_PROGRESS, 225)
    release
    end
}

