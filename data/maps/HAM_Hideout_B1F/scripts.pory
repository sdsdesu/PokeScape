mapscripts HAM_Hideout_B1F_MapScripts {
    MAP_SCRIPT_ON_TRANSITION {
        call(HAMHIDEOUT_B1F_STATE)
        goto(HAM_HIDEOUT_GOLDENGNOME_PLACENPCS)
    }
    MAP_SCRIPT_ON_FRAME_TABLE [
		VAR_POKESCAPE_GOLDENGNOMES, 10: HAM_HIDEOUT_GOLDENGNOME_STATE
    ]
}

script HAMHIDEOUT_B1F_STATE {
    clearflag(FLAG_TEMP_D) //SHOWS NPCS
    setflag(FLAG_TEMP_C) //HIDES TRAINERS
    setflag(FLAG_TEMP_E)

    if (var(VAR_POKESCAPE_STORYMODE_PROGRESS) == 220) { 
        setvar(VAR_TEMP_0, 1)
    }
    if (var(VAR_POKESCAPE_STORYMODE_PROGRESS) == 225) { 
        setvar(VAR_TEMP_0, 2)
    }
    if (var(VAR_POKESCAPE_STORYMODE_PROGRESS) == 235) { 
        setflag(FLAG_TEMP_D) //Hides NPCS
        clearflag(FLAG_TEMP_C) //Shows TRAINERS
        clearflag(FLAG_TEMP_E)
    }
    return
}



